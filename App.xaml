<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="GeoLens.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GeoLens"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- GeoLens Fluent Design Theme Resources -->

            <!-- Confidence Level Colors -->
            <Color x:Key="ConfidenceVeryHighColor">#00FFFF</Color> <!-- Cyan for EXIF GPS -->
            <Color x:Key="ConfidenceHighColor">#00DD66</Color> <!-- Green -->
            <Color x:Key="ConfidenceMediumColor">#FFDD00</Color> <!-- Yellow -->
            <Color x:Key="ConfidenceLowColor">#FF6666</Color> <!-- Red -->

            <SolidColorBrush x:Key="ConfidenceVeryHighBrush" Color="{StaticResource ConfidenceVeryHighColor}" />
            <SolidColorBrush x:Key="ConfidenceHighBrush" Color="{StaticResource ConfidenceHighColor}" />
            <SolidColorBrush x:Key="ConfidenceMediumBrush" Color="{StaticResource ConfidenceMediumColor}" />
            <SolidColorBrush x:Key="ConfidenceLowBrush" Color="{StaticResource ConfidenceLowColor}" />

            <!-- Status Colors -->
            <Color x:Key="StatusQueuedColor">#808080</Color> <!-- Gray -->
            <Color x:Key="StatusProcessingColor">#0078D4</Color> <!-- Blue -->
            <Color x:Key="StatusDoneColor">#00DD66</Color> <!-- Green -->
            <Color x:Key="StatusErrorColor">#FF6666</Color> <!-- Red -->
            <Color x:Key="StatusCachedColor">#00FFFF</Color> <!-- Cyan -->

            <SolidColorBrush x:Key="StatusQueuedBrush" Color="{StaticResource StatusQueuedColor}" />
            <SolidColorBrush x:Key="StatusProcessingBrush" Color="{StaticResource StatusProcessingColor}" />
            <SolidColorBrush x:Key="StatusDoneBrush" Color="{StaticResource StatusDoneColor}" />
            <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusErrorColor}" />
            <SolidColorBrush x:Key="StatusCachedBrush" Color="{StaticResource StatusCachedColor}" />

            <!-- Accent Colors -->
            <Color x:Key="SystemAccentColor">#0078D4</Color>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource SystemAccentColor}" />

            <!-- Background Colors for Dark Theme -->
            <Color x:Key="AppBackgroundColor">#0A0A0A</Color>
            <Color x:Key="PanelBackgroundColor">#1A1A1A</Color>
            <Color x:Key="CardBackgroundColor">#1E1E1E</Color>
            <Color x:Key="ElevatedBackgroundColor">#252525</Color>

            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />

            <!-- Acrylic Brushes -->
            <AcrylicBrush x:Key="LeftPanelAcrylicBrush"
                         TintColor="#1A1A1A"
                         TintOpacity="0.8"
                         TintLuminosityOpacity="0.8"
                         Fallback="#1E1E1E" />

            <AcrylicBrush x:Key="RightPanelAcrylicBrush"
                         TintColor="#1A1A1A"
                         TintOpacity="0.7"
                         TintLuminosityOpacity="0.9"
                         Fallback="#1E1E1E" />

            <!-- Corner Radius -->
            <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
            <x:Double x:Key="ControlCornerRadiusValue">8</x:Double>

            <!-- Spacing -->
            <x:Double x:Key="SpacingXS">4</x:Double>
            <x:Double x:Key="SpacingS">8</x:Double>
            <x:Double x:Key="SpacingM">12</x:Double>
            <x:Double x:Key="SpacingL">16</x:Double>
            <x:Double x:Key="SpacingXL">24</x:Double>

            <!-- Font Sizes -->
            <x:Double x:Key="FontSizeCaption">11</x:Double>
            <x:Double x:Key="FontSizeBody">14</x:Double>
            <x:Double x:Key="FontSizeSubtitle">16</x:Double>
            <x:Double x:Key="FontSizeTitle">20</x:Double>
            <x:Double x:Key="FontSizeDisplay">28</x:Double>

            <!-- Button Styles -->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style TargetType="primitives:ToggleButton">
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
            </Style>

            <!-- Icon Button Style -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <!-- Card Style -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
