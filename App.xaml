<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="GeoLens.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GeoLens"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- GeoLens Fluent Design Theme Resources -->

            <!-- Confidence Level Colors -->
            <SolidColorBrush x:Key="ConfidenceVeryHighBrush" Color="#00FFFF" /> <!-- Cyan for EXIF GPS -->
            <SolidColorBrush x:Key="ConfidenceHighBrush" Color="#00DD66" /> <!-- Green -->
            <SolidColorBrush x:Key="ConfidenceMediumBrush" Color="#FFDD00" /> <!-- Yellow -->
            <SolidColorBrush x:Key="ConfidenceLowBrush" Color="#FF6666" /> <!-- Red -->

            <!-- Status Colors -->
            <SolidColorBrush x:Key="StatusQueuedBrush" Color="#808080" /> <!-- Gray -->
            <SolidColorBrush x:Key="StatusProcessingBrush" Color="#0078D4" /> <!-- Blue -->
            <SolidColorBrush x:Key="StatusDoneBrush" Color="#00DD66" /> <!-- Green -->
            <SolidColorBrush x:Key="StatusErrorBrush" Color="#FF6666" /> <!-- Red -->
            <SolidColorBrush x:Key="StatusCachedBrush" Color="#00FFFF" /> <!-- Cyan -->

            <!-- Accent Colors -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />

            <!-- Background Colors for Dark Theme -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="#0A0A0A" />
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1A1A1A" />
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1E1E1E" />

            <!-- Acrylic Brushes -->
            <AcrylicBrush x:Key="LeftPanelAcrylicBrush"
                         TintColor="#1A1A1A"
                         TintOpacity="0.8"
                         TintLuminosityOpacity="0.8"
                         FallbackColor="#1E1E1E" />

            <AcrylicBrush x:Key="RightPanelAcrylicBrush"
                         TintColor="#1A1A1A"
                         TintOpacity="0.7"
                         TintLuminosityOpacity="0.9"
                         FallbackColor="#1E1E1E" />

            <!-- Corner Radius -->
            <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
            <x:Double x:Key="ControlCornerRadiusValue">8</x:Double>

            <!-- Spacing -->
            <x:Double x:Key="SpacingXS">4</x:Double>
            <x:Double x:Key="SpacingS">8</x:Double>
            <x:Double x:Key="SpacingM">12</x:Double>
            <x:Double x:Key="SpacingL">16</x:Double>
            <x:Double x:Key="SpacingXL">24</x:Double>

            <!-- Font Sizes -->
            <x:Double x:Key="FontSizeCaption">11</x:Double>
            <x:Double x:Key="FontSizeBody">14</x:Double>
            <x:Double x:Key="FontSizeSubtitle">16</x:Double>
            <x:Double x:Key="FontSizeTitle">20</x:Double>
            <x:Double x:Key="FontSizeDisplay">28</x:Double>

            <!-- Button Styles -->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
                <Setter Property="Padding" Value="16,8"/>
            </Style>

            <Style TargetType="primitives:ToggleButton">
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
            </Style>

            <!-- Icon Button Style -->
            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <!-- Card Style -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
