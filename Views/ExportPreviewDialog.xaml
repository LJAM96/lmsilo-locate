<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="GeoLens.Views.ExportPreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Export Preview"
    PrimaryButtonText="Export"
    SecondaryButtonText="Copy Preview"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="PrimaryButton_Click"
    SecondaryButtonClick="SecondaryButton_Click"
    CloseButtonClick="CloseButton_Click"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid MinWidth="600" MinHeight="500" MaxWidth="800" MaxHeight="700">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Export Information -->
        <Grid Grid.Row="0" Padding="0,0,0,16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Margin="0,0,0,12">
            <StackPanel Spacing="8" Padding="16">
                <!-- Export Format -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Export Format:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="FormatText" Text="CSV" FontFamily="Consolas"/>
                </Grid>

                <!-- Template -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Template:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="TemplateText" Text="Detailed" FontFamily="Consolas"/>
                </Grid>

                <!-- Record Count -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Total Records:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="RecordCountText" Text="0" FontFamily="Consolas"/>
                </Grid>

                <!-- Estimated Size -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Estimated Size:" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="EstimatedSizeText" Text="~0 KB" FontFamily="Consolas"/>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Preview Content -->
        <Grid Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Preview Header -->
            <TextBlock Grid.Row="0" Text="Preview (First 10 rows)" FontWeight="SemiBold" Margin="0,0,0,12"/>

            <!-- Preview ScrollViewer -->
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="PreviewText"
                          FontFamily="Consolas"
                          FontSize="11"
                          TextWrapping="NoWrap"
                          IsTextSelectionEnabled="True"
                          Text="Preview loading..."/>
            </ScrollViewer>

            <!-- Info Message -->
            <InfoBar Grid.Row="2"
                    IsOpen="True"
                    Severity="Informational"
                    Message="Preview shows the first 10 rows/entries. The actual export may contain more data."
                    IsClosable="False"
                    Margin="0,12,0,0"/>
        </Grid>
    </Grid>
</ContentDialog>
