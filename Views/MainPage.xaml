<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GeoLens.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:GeoLens.Models"
    xmlns:views="using:GeoLens.Views"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

    <!-- Page Transitions -->
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <EntranceNavigationTransitionInfo/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <!-- NavigationView with Hamburger Menu -->
    <NavigationView x:Name="NavView"
                   PaneDisplayMode="Left"
                   IsBackButtonVisible="Collapsed"
                   IsSettingsVisible="False"
                   IsTitleBarAutoPaddingEnabled="False"
                   IsPaneOpen="False"
                   OpenPaneLength="200"
                   CompactModeThresholdWidth="600"
                   ExpandedModeThresholdWidth="800"
                   SelectionChanged="NavView_SelectionChanged">

        <NavigationView.MenuItems>
            <NavigationViewItem Content="AI Geolocation"
                               Tag="main"
                               IsSelected="True">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE774;"/> <!-- Globe icon -->
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItem Content="Settings"
                               Tag="settings">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE713;"/> <!-- Settings icon -->
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.Content>
            <!-- Navigation Container -->
            <Grid>
                <!-- Main Geolocation Content -->
                <Grid x:Name="MainContentGrid" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/> <!-- Left Panel: Image Queue -->
                    <ColumnDefinition Width="*"/> <!-- Center Panel: Globe/Map -->
                    <ColumnDefinition Width="400"/> <!-- Right Panel: Results -->
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL: Image Queue -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <AcrylicBrush TintColor="#1A1A1A"
                             TintOpacity="0.8"
                             TintLuminosityOpacity="0.8"
                             FallbackColor="#1E1E1E"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- CommandBar -->
                <RowDefinition Height="*"/> <!-- Image List -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- CommandBar with Actions -->
            <CommandBar Grid.Row="0"
                       Background="Transparent"
                       DefaultLabelPosition="Right"
                       OverflowButtonVisibility="Collapsed">

                <AppBarButton Label="Add Images"
                             Icon="Add"
                             Click="AddImages_Click"/>

                <AppBarButton Label="Process"
                             Icon="Play"
                             Click="ProcessImages_Click"/>

                <AppBarSeparator/>

                <AppBarButton Label="Export"
                             Icon="Save"
                             Click="ExportSelection_Click"/>

                <AppBarButton Label="Remove"
                             Icon="Delete"
                             Click="RemoveSelected_Click"/>

                <CommandBar.SecondaryCommands>
                    <AppBarButton Label="Select All"
                                 Click="SelectAll_Click"/>
                    <AppBarButton Label="Clear Selection"
                                 Click="ClearSelection_Click"/>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <!-- Multi-Selection Toolbar (appears when 2+ images selected) -->
            <!-- In Grid.Row="0" after CommandBar to render on top -->
            <Border x:Name="MultiSelectToolbar"
                   Grid.Row="0"
                   Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
                   BorderBrush="{ThemeResource SystemFillColorAttentionBrush}"
                   BorderThickness="0,0,0,1"
                   Padding="12,8"
                   Visibility="Collapsed">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                               Orientation="Horizontal"
                               Spacing="8">
                        <ToggleButton x:Name="HeatmapToggle"
                                     MinWidth="110"
                                     Checked="HeatmapToggle_Checked"
                                     Unchecked="HeatmapToggle_Unchecked">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE81E;"/>
                                <TextBlock Text="Heatmap"/>
                            </StackPanel>
                        </ToggleButton>

                        <Button MinWidth="110"
                               Click="OverlayAll_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B3;"/>
                                <TextBlock Text="Overlay All"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Column="1"
                              x:Name="MultiSelectStatusText"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"
                              Text="2 images selected"
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                              FontWeight="SemiBold"
                              FontSize="12"/>
                </Grid>
            </Border>

            <!-- Image ListView (Single Column) -->
            <ListView x:Name="ImageListView"
                     Grid.Row="1"
                     ItemsSource="{x:Bind ImageQueue}"
                     SelectionMode="Multiple"
                     Padding="12,8"
                     IsItemClickEnabled="False"
                     ShowsScrollingPlaceholders="True">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ImageQueueItem">
                        <Grid Margin="0,4"
                             Padding="12"
                             CornerRadius="8"
                             Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                             BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                             BorderThickness="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/> <!-- Thumbnail -->
                                <ColumnDefinition Width="*"/> <!-- Info -->
                                <ColumnDefinition Width="Auto"/> <!-- Status -->
                            </Grid.ColumnDefinitions>

                            <Grid.Shadow>
                                <ThemeShadow/>
                            </Grid.Shadow>

                            <!-- Thumbnail -->
                            <Border Grid.Column="0"
                                   Width="72"
                                   Height="72"
                                   CornerRadius="6"
                                   Background="#252525">
                                <Grid>
                                    <Image Source="{x:Bind ThumbnailSource, Mode=OneWay}"
                                          Stretch="UniformToFill"/>

                                    <!-- Processing Overlay -->
                                    <Grid Visibility="{x:Bind IsProcessing, Mode=OneWay}"
                                         CornerRadius="6">
                                        <Border Background="#80000000"
                                               CornerRadius="6"/>
                                        <ProgressRing IsActive="True" Width="32" Height="32"/>
                                    </Grid>

                                    <!-- Cache Badge -->
                                    <Border HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="4"
                                           Visibility="{x:Bind IsCached}"
                                           Background="{ThemeResource SystemFillColorSuccessBrush}"
                                           CornerRadius="10"
                                           Width="20"
                                           Height="20">
                                        <FontIcon Glyph="&#xE73E;"
                                                 FontSize="10"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Info Column -->
                            <StackPanel Grid.Column="1"
                                       Margin="12,0,12,0"
                                       VerticalAlignment="Center"
                                       Spacing="4">
                                <TextBlock Text="{x:Bind FileName}"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          TextTrimming="CharacterEllipsis"
                                          MaxLines="1"/>

                                <TextBlock Text="{x:Bind FileSizeFormatted}"
                                          FontSize="11"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <!-- Status Column -->
                            <Border Grid.Column="2"
                                   Background="{x:Bind StatusColor, Mode=OneWay}"
                                   CornerRadius="12"
                                   Padding="10,4"
                                   VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="{x:Bind StatusGlyph, Mode=OneWay}"
                                             FontSize="12"
                                             Foreground="White"/>
                                    <TextBlock Text="{x:Bind StatusText, Mode=OneWay}"
                                              FontSize="11"
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Transitions">
                            <Setter.Value>
                                <TransitionCollection>
                                    <AddDeleteThemeTransition/>
                                    <ContentThemeTransition/>
                                    <ReorderThemeTransition/>
                                    <EntranceThemeTransition IsStaggeringEnabled="True"/>
                                </TransitionCollection>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Status Bar at Bottom -->
            <Border Grid.Row="2"
                   Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="0,1,0,0"
                   Padding="16,12">
                <StackPanel Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                  FontSize="12"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                            <Run Text="Total:"/>
                            <Run Text="{x:Bind ImageQueue.Count, Mode=OneWay}" FontWeight="SemiBold"/>
                        </TextBlock>

                        <TextBlock Grid.Column="1"
                                  Text="{x:Bind SelectedCountText, Mode=OneWay}"
                                  FontSize="12"
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  FontWeight="SemiBold"/>
                    </Grid>

                    <TextBlock Text="{x:Bind QueueStatusMessage, Mode=OneWay}"
                              FontSize="11"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                              TextWrapping="Wrap"
                              MaxLines="2"
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CENTER PANEL: Globe/Map View -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Padding="24,16" Background="{StaticResource CardBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="GeoLens"
                              FontSize="{StaticResource FontSizeDisplay}"
                              FontWeight="SemiBold"/>
                    <TextBlock Text="AI-Powered Image Geolocation"
                              FontSize="13"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- 3D Globe (WebView2) -->
            <Grid Grid.Row="1" Padding="24">
                <Border Background="#0F0F0F"
                       CornerRadius="12"
                       BorderBrush="#2F2F2F"
                       BorderThickness="1">
                    <Grid>
                        <WebView2 x:Name="GlobeWebView"
                                 DefaultBackgroundColor="Black"/>

                        <!-- Loading Overlay -->
                        <Grid x:Name="GlobeLoadingOverlay"
                             Background="#0F0F0F"
                             Visibility="Visible">
                            <StackPanel HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Spacing="16">
                                <ProgressRing IsActive="True"
                                             Width="48"
                                             Height="48"/>
                                <TextBlock Text="Loading 3D Globe..."
                                          FontSize="16"
                                          Foreground="#FFFFFF"/>
                                <TextBlock Text="Initializing Three.js renderer"
                                          FontSize="12"
                                          Foreground="#80FFFFFF"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Controls Bar -->
            <Border Grid.Row="2"
                   Margin="24,0,24,24"
                   Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="8"
                   Padding="16">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="View Mode:"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               Spacing="8">
                        <RadioButton Content="Individual Pins" IsChecked="True" GroupName="ViewMode"/>
                        <RadioButton Content="Heatmap" GroupName="ViewMode"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               Spacing="8">
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Zoom In">
                            <FontIcon Glyph="&#xE71E;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Zoom Out">
                            <FontIcon Glyph="&#xE71F;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Reset View">
                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- RIGHT PANEL: Results -->
        <Grid Grid.Column="2">
            <Grid.Background>
                <AcrylicBrush TintColor="#1A1A1A"
                             TintOpacity="0.7"
                             TintLuminosityOpacity="0.9"
                             FallbackColor="#1E1E1E"/>
            </Grid.Background>

            <ScrollViewer Padding="16">
                <StackPanel Spacing="16">

                    <!-- EXIF Metadata Panel -->
                    <views:ExifMetadataPanel x:Name="ExifPanel"
                                            Visibility="Collapsed"/>

                    <!-- EXIF GPS Card (if available) -->
                    <Expander x:Name="ExifGpsExpander"
                             Header="GPS Metadata"
                             IsExpanded="True"
                             Visibility="{x:Bind HasExifGps, Mode=OneWay}">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE81D;"
                                             Foreground="{StaticResource ConfidenceVeryHighBrush}"/>
                                    <TextBlock Text="GPS Metadata" FontWeight="SemiBold"/>
                                    <Border Background="{StaticResource ConfidenceVeryHighBrush}"
                                           CornerRadius="4" Padding="8,2">
                                        <TextBlock Text="VERY HIGH"
                                                  FontSize="10"
                                                  FontWeight="Bold"
                                                  Foreground="Black"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </Expander.HeaderTemplate>

                        <StackPanel Spacing="8" Margin="0,12,0,0">
                            <TextBlock Text="{x:Bind ExifLocationName, Mode=OneWay}"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>

                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Latitude"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              FontSize="11"/>
                                    <TextBlock Text="{x:Bind ExifLat, Mode=OneWay}"
                                              FontFamily="Consolas"
                                              FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Longitude"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              FontSize="11"/>
                                    <TextBlock Text="{x:Bind ExifLon, Mode=OneWay}"
                                              FontFamily="Consolas"
                                              FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- Reliability Assessment -->
                    <InfoBar IsOpen="True"
                            Severity="Success"
                            Message="{x:Bind ReliabilityMessage, Mode=OneWay}"
                            IsClosable="False"/>

                    <!-- Export Feedback -->
                    <InfoBar x:Name="ExportFeedbackBar"
                            IsOpen="False"
                            IsClosable="True"/>

                    <!-- AI Predictions Section -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="AI Predictions"
                                  FontSize="{StaticResource FontSizeSubtitle}"
                                  FontWeight="SemiBold"/>

                        <ItemsRepeater x:Name="PredictionsList"
                                      ItemsSource="{x:Bind Predictions, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="local:EnhancedLocationPrediction">
                                    <Expander HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Stretch"
                                             Margin="0,0,0,8"
                                             Tapped="Prediction_Tapped">

                                        <Expander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Rank Badge -->
                                                <Border Grid.Column="0"
                                                       Width="32" Height="32"
                                                       Background="{StaticResource AccentBrush}"
                                                       CornerRadius="16"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind Rank}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Location Info -->
                                                <StackPanel Grid.Column="1"
                                                           Margin="12,0"
                                                           VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind LocationSummary}"
                                                              FontWeight="SemiBold"
                                                              TextTrimming="CharacterEllipsis"
                                                              MaxLines="1"/>

                                                    <StackPanel Orientation="Horizontal" Spacing="4"
                                                               Visibility="{x:Bind IsPartOfCluster}">
                                                        <FontIcon Glyph="&#xE81E;"
                                                                 FontSize="11"
                                                                 Foreground="{StaticResource AccentBrush}"/>
                                                        <TextBlock Text="Clustered prediction"
                                                                  FontSize="11"
                                                                  Foreground="{StaticResource AccentBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Confidence Badge -->
                                                <Border Grid.Column="2"
                                                       Background="{x:Bind ConfidenceColor}"
                                                       CornerRadius="4"
                                                       Padding="8,4"
                                                       VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="{x:Bind ConfidenceGlyph}"
                                                                 FontSize="12"
                                                                 Foreground="White"/>
                                                        <TextBlock Text="{x:Bind ConfidenceText}"
                                                                  FontSize="11"
                                                                  FontWeight="Bold"
                                                                  Foreground="White"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Expander.Header>

                                        <StackPanel Spacing="12" Margin="44,8,0,0">
                                            <!-- Coordinates -->
                                            <Grid ColumnSpacing="16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="4">
                                                    <TextBlock Text="Latitude"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                              FontSize="11"/>
                                                    <TextBlock Text="{x:Bind LatitudeFormatted}"
                                                              FontFamily="Consolas"
                                                              FontSize="12"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Spacing="4">
                                                    <TextBlock Text="Longitude"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                              FontSize="11"/>
                                                    <TextBlock Text="{x:Bind LongitudeFormatted}"
                                                              FontFamily="Consolas"
                                                              FontSize="12"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Probability Breakdown -->
                                            <StackPanel Spacing="4">
                                                <!-- Main probability display -->
                                                <TextBlock Text="{x:Bind ProbabilityFormatted}"
                                                          FontSize="13"
                                                          FontWeight="SemiBold"
                                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                                                <!-- Clustering boost details (if applicable) -->
                                                <StackPanel Spacing="2" Visibility="{x:Bind HasBoost}">
                                                    <TextBlock FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <Run Text="Base:"/>
                                                        <Run Text="{x:Bind OriginalProbabilityFormatted}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="11" Foreground="{StaticResource ConfidenceHighBrush}">
                                                        <Run Text="Boost:"/>
                                                        <Run Text="{x:Bind BoostFormatted}" FontWeight="SemiBold"/>
                                                        <Run Text="(clustering)"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                       HorizontalAlignment="Stretch"
                                                       FontSize="12"
                                                       Padding="8,4">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE707;" FontSize="12"/>
                                                        <TextBlock Text="View"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="1"
                                                       HorizontalAlignment="Stretch"
                                                       FontSize="12"
                                                       Padding="8,4">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE8C8;" FontSize="12"/>
                                                        <TextBlock Text="Copy"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Export Actions -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Export"
                                  FontSize="{StaticResource FontSizeSubtitle}"
                                  FontWeight="SemiBold"/>

                        <Grid ColumnSpacing="8" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                   HorizontalAlignment="Stretch"
                                   Click="ExportCsv_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="CSV"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="1"
                                   HorizontalAlignment="Stretch"
                                   Click="ExportPdf_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="PDF"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="0"
                                   HorizontalAlignment="Stretch"
                                   Click="ExportKml_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE909;"/>
                                    <TextBlock Text="KML"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1"
                                   HorizontalAlignment="Stretch"
                                   Click="ExportJson_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8C8;"/>
                                    <TextBlock Text="JSON"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
                </Grid>

                <!-- Settings Frame -->
                <Frame x:Name="SettingsFrame" Visibility="Collapsed"/>
            </Grid>
        </NavigationView.Content>
    </NavigationView>
</Page>
