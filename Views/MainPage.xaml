<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GeoLens.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                           Text="GeoLens" />
                <TextBlock Margin="0,4,0,0"
                           FontSize="13"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Text="Drop one or more images, queue them, then view the prediction pins on the globe." />
            </StackPanel>
            <Button Grid.Column="1"
                    Content="Settings"
                    Click="OpenSettings_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Padding="16,8"
                    CornerRadius="8" />
        </Grid>

        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Queue + Predictions -->
            <StackPanel Spacing="16">
                <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                        Padding="16"
                        CornerRadius="12">
                    <StackPanel Spacing="12">
                        <TextBlock FontSize="18"
                                   FontWeight="SemiBold"
                                   Text="Image Queue" />
                        <ListView x:Name="QueueList"
                                  Height="150"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12">
                            <Button Content="Add Image(s)"
                                    Click="AddImages_Click"
                                    CornerRadius="8"
                                    HorizontalAlignment="Left" />
                            <Button Content="Start predictions"
                                    Click="StartPredictions_Click"
                                    CornerRadius="8"
                                    HorizontalAlignment="Left" />
                        </StackPanel>
                        <TextBlock x:Name="StatusLabel"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="No images queued." />
                    </StackPanel>
                </Border>

                <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                        Padding="16"
                        CornerRadius="12">
                    <StackPanel Spacing="12">
                        <TextBlock FontSize="18"
                                   FontWeight="SemiBold"
                                   Text="Predicted Locations" />
                        <ListView x:Name="PredictionsList"
                                  SelectionMode="None"
                                  Height="220">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="4">
                                        <TextBlock Text="{Binding LocationName}"
                                                   FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding Coordinates}"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                        <TextBlock Text="{Binding ConfidenceLabel}"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource SystemAccentColor}"
                                                   FontWeight="SemiBold" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Globe preview -->
            <Border Grid.Column="1"
                    Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                    CornerRadius="12"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Globe preview"
                               FontSize="18"
                               FontWeight="SemiBold" />
                    <Grid Grid.Row="1"
                          Margin="0,12,0,0">
                        <Ellipse Fill="SkyBlue"
                                 Stroke="{ThemeResource SystemAccentColor}"
                                 StrokeThickness="2"
                                 Opacity="0.5" />
                        <Ellipse Fill="LightGray"
                                 Width="220"
                                 Height="220"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Opacity="0.3" />
                        <ItemsControl x:Name="GlobePins"
                                      Width="220"
                                      Height="220"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12"
                                             Height="12"
                                             Stroke="White"
                                             StrokeThickness="2"
                                             Fill="{ThemeResource SystemAccentColor}"
                                             Canvas.Left="{Binding MapX}"
                                             Canvas.Top="{Binding MapY}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
                <TextBlock Margin="0,12,0,0"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Text="Once wired up the AI will push five pins to the globe." />
            </Border>
        </Grid>
    </Grid>
</Page>
