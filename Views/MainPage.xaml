<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GeoLens.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:GeoLens.Models"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/> <!-- Left Panel: Image Queue -->
            <ColumnDefinition Width="*"/> <!-- Center Panel: Globe/Map -->
            <ColumnDefinition Width="400"/> <!-- Right Panel: Results -->
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Image Queue -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <AcrylicBrush TintColor="#1A1A1A"
                             TintOpacity="0.8"
                             TintLuminosityOpacity="0.8"
                             Fallback="#1E1E1E"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Selection Toolbar -->
                <RowDefinition Height="*"/> <!-- Image Grid -->
                <RowDefinition Height="Auto"/> <!-- Add Images Button -->
            </Grid.RowDefinitions>

            <!-- Selection Toolbar -->
            <StackPanel Grid.Row="0" Padding="16,16,16,8" Spacing="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0"
                             Content="Select All"
                             IsChecked="{x:Bind IsAllSelected, Mode=TwoWay}"/>

                    <TextBlock Grid.Column="1"
                              Text="{x:Bind SelectedCountText, Mode=OneWay}"
                              Foreground="{StaticResource AccentBrush}"
                              VerticalAlignment="Center"
                              FontSize="13"/>
                </Grid>

                <!-- Action Buttons -->
                <Grid ColumnSpacing="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           HorizontalAlignment="Stretch"
                           Style="{StaticResource IconButtonStyle}"
                           ToolTipService.ToolTip="Export Selection"
                           Click="ExportSelection_Click">
                        <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                    </Button>

                    <Button Grid.Column="1"
                           HorizontalAlignment="Stretch"
                           Style="{StaticResource IconButtonStyle}"
                           ToolTipService.ToolTip="Clear Selection"
                           Click="ClearSelection_Click">
                        <FontIcon Glyph="&#xE711;" FontSize="16"/>
                    </Button>

                    <Button Grid.Column="2"
                           HorizontalAlignment="Stretch"
                           Style="{StaticResource IconButtonStyle}"
                           ToolTipService.ToolTip="Remove Selected"
                           Click="RemoveSelected_Click">
                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="IndianRed"/>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- Image GridView -->
            <ScrollViewer Grid.Row="1" Padding="8">
                <GridView x:Name="ImageGridView"
                         ItemsSource="{x:Bind ImageQueue}"
                         SelectionMode="None"
                         IsItemClickEnabled="False">

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:ImageQueueItem">
                            <Grid Width="140" Height="200"
                                 CornerRadius="8"
                                 Background="{StaticResource CardBackgroundBrush}"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                 BorderThickness="1"
                                 Margin="4">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Thumbnail -->
                                <Border Grid.Row="0" Margin="8,8,8,4" CornerRadius="4"
                                       Background="#252525">
                                    <Grid>
                                        <Image Source="{x:Bind ThumbnailSource, Mode=OneWay}"
                                              Stretch="UniformToFill"/>

                                        <!-- Processing Overlay -->
                                        <Grid Background="#AA000000"
                                             Visibility="{x:Bind IsProcessing, Mode=OneWay}">
                                            <ProgressRing IsActive="True" Width="32" Height="32"/>
                                        </Grid>

                                        <!-- Cache Badge -->
                                        <Border HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="8"
                                               Visibility="{x:Bind IsCached}"
                                               Background="{StaticResource StatusCachedBrush}"
                                               CornerRadius="12"
                                               Padding="6,2">
                                            <FontIcon Glyph="&#xE8FB;"
                                                     FontSize="10"
                                                     Foreground="White"/>
                                        </Border>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Row="0"
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Margin="8"/>
                                    </Grid>
                                </Border>

                                <!-- Info Panel -->
                                <StackPanel Grid.Row="1"
                                           Padding="8"
                                           Spacing="4">
                                    <TextBlock Text="{x:Bind FileName}"
                                              FontSize="11"
                                              TextTrimming="CharacterEllipsis"
                                              TextAlignment="Center"
                                              MaxLines="1"/>

                                    <!-- Status Badge -->
                                    <Border HorizontalAlignment="Center"
                                           Background="{x:Bind StatusColor, Mode=OneWay}"
                                           CornerRadius="4"
                                           Padding="8,2">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="{x:Bind StatusGlyph, Mode=OneWay}"
                                                     FontSize="10"
                                                     Foreground="White"/>
                                            <TextBlock Text="{x:Bind StatusText, Mode=OneWay}"
                                                      FontSize="10"
                                                      Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="{x:Bind FileSizeFormatted}"
                                              FontSize="10"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              TextAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </ScrollViewer>

            <!-- Add Images Button (Bottom) -->
            <Border Grid.Row="2"
                   Margin="16"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="8"
                   Padding="16">
                <StackPanel Spacing="8">
                    <Button HorizontalAlignment="Stretch"
                           Click="AddImages_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock Text="Add Images"/>
                        </StackPanel>
                    </Button>

                    <Button HorizontalAlignment="Stretch"
                           Click="ProcessImages_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE768;"/>
                            <TextBlock Text="Process Queue"/>
                        </StackPanel>
                    </Button>

                    <TextBlock x:Name="QueueStatusText"
                              Text="{x:Bind QueueStatusMessage, Mode=OneWay}"
                              FontSize="11"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              TextWrapping="Wrap"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CENTER PANEL: Globe/Map View -->
        <Grid Grid.Column="1" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Padding="24,16" Background="{StaticResource CardBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="GeoLens"
                              FontSize="{StaticResource FontSizeDisplay}"
                              FontWeight="SemiBold"/>
                    <TextBlock Text="AI-Powered Image Geolocation"
                              FontSize="13"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Style="{StaticResource IconButtonStyle}"
                       ToolTipService.ToolTip="Settings"
                       Click="OpenSettings_Click">
                    <FontIcon Glyph="&#xE713;" FontSize="16"/>
                </Button>
            </Grid>

            <!-- Globe Placeholder -->
            <Grid Grid.Row="1" Padding="24">
                <Border Background="#0F0F0F"
                       CornerRadius="12"
                       BorderBrush="#2F2F2F"
                       BorderThickness="1">
                    <Grid>
                        <!-- Dark space background -->
                        <Ellipse Fill="#0A0A0A"
                                Stroke="#2F2F2F"
                                StrokeThickness="2"
                                Width="400"
                                Height="400"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>

                        <!-- Earth silhouette -->
                        <Ellipse Width="380"
                                Height="380"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#1A3A4A" Offset="0"/>
                                    <GradientStop Color="#0D1F2A" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Placeholder text -->
                        <StackPanel HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Spacing="12">
                            <FontIcon Glyph="&#xE774;"
                                     FontSize="48"
                                     Foreground="#40FFFFFF"/>
                            <TextBlock Text="3D Globe View"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="#80FFFFFF"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Predictions will appear as pins on the globe"
                                      FontSize="12"
                                      Foreground="#60FFFFFF"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Pin mock overlay -->
                        <ItemsControl x:Name="GlobePins"
                                     Width="380"
                                     Height="380"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="12"
                                            Height="12"
                                            Stroke="White"
                                            StrokeThickness="2"
                                            Fill="{Binding PinColor}"
                                            Canvas.Left="{Binding X}"
                                            Canvas.Top="{Binding Y}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>

            <!-- Controls Bar -->
            <Border Grid.Row="2"
                   Margin="24,0,24,24"
                   Background="{StaticResource CardBackgroundBrush}"
                   CornerRadius="8"
                   Padding="16">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="View Mode:"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               Spacing="8">
                        <RadioButton Content="Individual Pins" IsChecked="True" GroupName="ViewMode"/>
                        <RadioButton Content="Heatmap" GroupName="ViewMode"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                               Orientation="Horizontal"
                               Spacing="8">
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Zoom In">
                            <FontIcon Glyph="&#xE71E;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Zoom Out">
                            <FontIcon Glyph="&#xE71F;" FontSize="14"/>
                        </Button>
                        <Button Style="{StaticResource IconButtonStyle}"
                               ToolTipService.ToolTip="Reset View">
                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- RIGHT PANEL: Results -->
        <Grid Grid.Column="2">
            <Grid.Background>
                <AcrylicBrush TintColor="#1A1A1A"
                             TintOpacity="0.7"
                             TintLuminosityOpacity="0.9"
                             Fallback="#1E1E1E"/>
            </Grid.Background>

            <ScrollViewer Padding="16">
                <StackPanel Spacing="16">

                    <!-- EXIF GPS Card (if available) -->
                    <Expander x:Name="ExifGpsExpander"
                             Header="GPS Metadata"
                             IsExpanded="True"
                             Visibility="{x:Bind HasExifGps, Mode=OneWay}">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon Glyph="&#xE81D;"
                                             Foreground="{StaticResource ConfidenceVeryHighBrush}"/>
                                    <TextBlock Text="GPS Metadata" FontWeight="SemiBold"/>
                                    <Border Background="{StaticResource ConfidenceVeryHighBrush}"
                                           CornerRadius="4" Padding="8,2">
                                        <TextBlock Text="VERY HIGH"
                                                  FontSize="10"
                                                  FontWeight="Bold"
                                                  Foreground="Black"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </Expander.HeaderTemplate>

                        <StackPanel Spacing="8" Margin="0,12,0,0">
                            <TextBlock Text="{x:Bind ExifLocationName, Mode=OneWay}"
                                      FontSize="16"
                                      FontWeight="SemiBold"/>

                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Latitude"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              FontSize="11"/>
                                    <TextBlock Text="{x:Bind ExifLat, Mode=OneWay}"
                                              FontFamily="Consolas"
                                              FontSize="13"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Longitude"
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                              FontSize="11"/>
                                    <TextBlock Text="{x:Bind ExifLon, Mode=OneWay}"
                                              FontFamily="Consolas"
                                              FontSize="13"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- Reliability Assessment -->
                    <InfoBar IsOpen="True"
                            Severity="Success"
                            Message="{x:Bind ReliabilityMessage, Mode=OneWay}"
                            IsClosable="False"/>

                    <!-- AI Predictions Section -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="AI Predictions"
                                  FontSize="{StaticResource FontSizeSubtitle}"
                                  FontWeight="SemiBold"/>

                        <ItemsRepeater x:Name="PredictionsList"
                                      ItemsSource="{x:Bind Predictions, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="local:EnhancedLocationPrediction">
                                    <Expander HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Stretch"
                                             Margin="0,0,0,8">

                                        <Expander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Rank Badge -->
                                                <Border Grid.Column="0"
                                                       Width="32" Height="32"
                                                       Background="{StaticResource AccentBrush}"
                                                       CornerRadius="16"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind Rank}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              FontWeight="Bold"
                                                              Foreground="White"/>
                                                </Border>

                                                <!-- Location Info -->
                                                <StackPanel Grid.Column="1"
                                                           Margin="12,0"
                                                           VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind LocationSummary}"
                                                              FontWeight="SemiBold"
                                                              TextTrimming="CharacterEllipsis"
                                                              MaxLines="1"/>

                                                    <StackPanel Orientation="Horizontal" Spacing="4"
                                                               Visibility="{x:Bind IsPartOfCluster}">
                                                        <FontIcon Glyph="&#xE81E;"
                                                                 FontSize="11"
                                                                 Foreground="{StaticResource AccentBrush}"/>
                                                        <TextBlock Text="Clustered prediction"
                                                                  FontSize="11"
                                                                  Foreground="{StaticResource AccentBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Confidence Badge -->
                                                <Border Grid.Column="2"
                                                       Background="{x:Bind ConfidenceColor}"
                                                       CornerRadius="4"
                                                       Padding="8,4"
                                                       VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="{x:Bind ConfidenceGlyph}"
                                                                 FontSize="12"
                                                                 Foreground="White"/>
                                                        <TextBlock Text="{x:Bind ConfidenceText}"
                                                                  FontSize="11"
                                                                  FontWeight="Bold"
                                                                  Foreground="White"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </Expander.Header>

                                        <StackPanel Spacing="12" Margin="44,8,0,0">
                                            <!-- Coordinates -->
                                            <Grid ColumnSpacing="16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Spacing="4">
                                                    <TextBlock Text="Latitude"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                              FontSize="11"/>
                                                    <TextBlock Text="{x:Bind LatitudeFormatted}"
                                                              FontFamily="Consolas"
                                                              FontSize="12"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Spacing="4">
                                                    <TextBlock Text="Longitude"
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                              FontSize="11"/>
                                                    <TextBlock Text="{x:Bind LongitudeFormatted}"
                                                              FontFamily="Consolas"
                                                              FontSize="12"/>
                                                </StackPanel>
                                            </Grid>

                                            <TextBlock Text="{x:Bind ProbabilityFormatted}"
                                                      FontSize="12"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                            <!-- Actions -->
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="0"
                                                       HorizontalAlignment="Stretch"
                                                       FontSize="12"
                                                       Padding="8,4">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE707;" FontSize="12"/>
                                                        <TextBlock Text="View"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Grid.Column="1"
                                                       HorizontalAlignment="Stretch"
                                                       FontSize="12"
                                                       Padding="8,4">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE8C8;" FontSize="12"/>
                                                        <TextBlock Text="Copy"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </StackPanel>

                    <!-- Export Actions -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Export"
                                  FontSize="{StaticResource FontSizeSubtitle}"
                                  FontWeight="SemiBold"/>

                        <Grid ColumnSpacing="8" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                   HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="CSV"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="1"
                                   HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A5;"/>
                                    <TextBlock Text="PDF"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="0"
                                   HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE909;"/>
                                    <TextBlock Text="KML"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="1" Grid.Column="1"
                                   HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8C8;"/>
                                    <TextBlock Text="Copy All"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
