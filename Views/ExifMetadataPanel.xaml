<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GeoLens.Views.ExifMetadataPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <!-- GPS Location Section -->
        <Expander Header="GPS Location"
                 IsExpanded="True"
                 x:Name="GpsExpander"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE81D;" Foreground="#00CED1"/>
                        <TextBlock Text="GPS Location" FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>

            <Grid Margin="36,8,0,0" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Latitude:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                          x:Name="LatitudeText"
                          FontWeight="SemiBold"
                          FontFamily="Consolas"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Longitude:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                          x:Name="LongitudeText"
                          FontWeight="SemiBold"
                          FontFamily="Consolas"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                          Text="Altitude:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="AltitudeLabel"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                          x:Name="AltitudeText"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                          Text="Location:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="LocationLabel"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                          x:Name="LocationNameText"
                          TextWrapping="Wrap"/>
            </Grid>
        </Expander>

        <!-- Camera Info Section -->
        <Expander Header="Camera Information"
                 IsExpanded="False"
                 x:Name="CameraExpander"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE722;"/>
                        <TextBlock Text="Camera Information" FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>

            <Grid Margin="36,8,0,0" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Camera:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="CameraLabel"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                          x:Name="CameraText"
                          TextWrapping="Wrap"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Lens:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="LensLabel"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                          x:Name="LensText"
                          TextWrapping="Wrap"/>
            </Grid>
        </Expander>

        <!-- Capture Settings Section -->
        <Expander Header="Capture Settings"
                 IsExpanded="False"
                 x:Name="SettingsExpander"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE7EE;"/>
                        <TextBlock Text="Capture Settings" FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>

            <Grid Margin="36,8,0,0" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="ISO:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="IsoLabel"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                          x:Name="IsoText"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Aperture:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="ApertureLabel"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                          x:Name="ApertureText"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                          Text="Shutter:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="ShutterLabel"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                          x:Name="ShutterText"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                          Text="Focal Length:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="FocalLengthLabel"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                          x:Name="FocalLengthText"/>

                <TextBlock Grid.Row="4" Grid.Column="0"
                          Text="Flash:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="FlashLabel"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                          x:Name="FlashText"/>

                <TextBlock Grid.Row="5" Grid.Column="0"
                          Text="White Bal.:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="WhiteBalanceLabel"/>
                <TextBlock Grid.Row="5" Grid.Column="1"
                          x:Name="WhiteBalanceText"/>

                <TextBlock Grid.Row="6" Grid.Column="0"
                          Text="Exp. Mode:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="ExposureModeLabel"/>
                <TextBlock Grid.Row="6" Grid.Column="1"
                          x:Name="ExposureModeText"/>
            </Grid>
        </Expander>

        <!-- Image Details Section -->
        <Expander Header="Image Details"
                 IsExpanded="False"
                 x:Name="DetailsExpander"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE91B;"/>
                        <TextBlock Text="Image Details" FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>

            <Grid Margin="36,8,0,0" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Dimensions:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                          x:Name="DimensionsText"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="File Size:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                          x:Name="FileSizeText"/>

                <TextBlock Grid.Row="2" Grid.Column="0"
                          Text="Date Taken:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="DateTakenLabel"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                          x:Name="DateTakenText"/>

                <TextBlock Grid.Row="3" Grid.Column="0"
                          Text="Orientation:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="OrientationLabel"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                          x:Name="OrientationText"/>

                <TextBlock Grid.Row="4" Grid.Column="0"
                          Text="Color Space:"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          x:Name="ColorSpaceLabel"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                          x:Name="ColorSpaceText"/>
            </Grid>
        </Expander>

        <!-- No EXIF Data Message -->
        <InfoBar x:Name="NoExifInfoBar"
                 Severity="Informational"
                 IsOpen="False"
                 Message="This image does not contain EXIF metadata."
                 IsClosable="False"/>
    </StackPanel>
</UserControl>
