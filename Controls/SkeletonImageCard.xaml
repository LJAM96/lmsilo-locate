<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="GeoLens.Controls.SkeletonImageCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:GeoLens.Controls"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Shimmer Animation -->
        <Storyboard x:Name="ShimmerStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="ShimmerTransform"
                Storyboard.TargetProperty="X"
                From="-1"
                To="1"
                Duration="0:0:1.5"
                EnableDependentAnimation="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Margin="0,4"
          Padding="12"
          CornerRadius="8"
          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
          BorderThickness="1">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/> <!-- Thumbnail -->
            <ColumnDefinition Width="*"/> <!-- Info -->
            <ColumnDefinition Width="Auto"/> <!-- Status -->
        </Grid.ColumnDefinitions>

        <!-- Shimmer Gradient Overlay -->
        <Grid.OpacityMask>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                <LinearGradientBrush.RelativeTransform>
                    <TranslateTransform x:Name="ShimmerTransform" X="-1"/>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="Transparent" Offset="0"/>
                <GradientStop Color="#40FFFFFF" Offset="0.4"/>
                <GradientStop Color="#80FFFFFF" Offset="0.5"/>
                <GradientStop Color="#40FFFFFF" Offset="0.6"/>
                <GradientStop Color="Transparent" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>

        <!-- Thumbnail Skeleton -->
        <Border Grid.Column="0"
                Width="72"
                Height="72"
                CornerRadius="6"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

        <!-- Info Column Skeleton -->
        <StackPanel Grid.Column="1"
                    Margin="12,0,12,0"
                    VerticalAlignment="Center"
                    Spacing="8">
            <!-- File name skeleton -->
            <Border Height="14"
                    Width="150"
                    CornerRadius="3"
                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>

            <!-- File size skeleton -->
            <Border Height="11"
                    Width="80"
                    CornerRadius="3"
                    Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
        </StackPanel>

        <!-- Status Badge Skeleton -->
        <Border Grid.Column="2"
                Width="70"
                Height="24"
                CornerRadius="12"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                VerticalAlignment="Center"/>
    </Grid>
</UserControl>
